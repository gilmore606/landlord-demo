<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInput" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/indigo</item>
        <item name="colorControlActivated">@color/pink</item>
    </style>
    <style name="Input" parent="TextInput">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#000055</item>
    </style>

    <style name="ErrorText" parent="Theme.AppCompat.Light">
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">#DD0000</item>
    </style>

    <style name="UserlistName" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="UserlistRole" parent="UserlistName">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="NavHeaderName" parent="Theme.AppCompat.Light">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NavHeaderNote" parent="Theme.AppCompat.Light">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="FieldHint" parent="Theme.AppCompat.Light">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#AAAAAA</item>
    </style>
    <style name="FieldLabel" parent="Theme.AppCompat.Light">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#888888</item>
    </style>
    <style name="FilterDesc" parent="Theme.AppCompat.Light">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PropName" parent="Theme.AppCompat.Light">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PropAvail" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#AA0000</item>
    </style>
    <style name="PropData" parent="Theme.AppCompat.Light">
        <item name="android:textSize">16dp</item>
    </style>
    <style name="PropDesc" parent="Theme.AppCompat.Light">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="Email" parent="PropDesc">
        <item name="android:textColor">#0000AA</item>
    </style>
</resources>
