<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:padding="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView android:layout_width="150dp" android:layout_height="wrap_content"
              android:theme="@style/UserlistName"
              android:id="@+id/proprow_name" />
    <TextView android:layout_width="150dp" android:layout_height="wrap_content"
              android:theme="@style/UserlistRole"
              android:id="@+id/proprow_address" />
    <TextView android:layout_width="70dp" android:layout_height="wrap_content"
              android:theme="@style/UserlistRole"
              android:id="@+id/proprow_rent" />
    <TextView android:layout_width="80dp" android:layout_height="wrap_content"
              android:theme="@style/UserlistRole"
              android:id="@+id/proprow_sqft" />
    <TextView android:layout_width="60dp" android:layout_height="wrap_content"
              android:theme="@style/UserlistRole"
              android:id="@+id/proprow_rooms" />
</LinearLayout>