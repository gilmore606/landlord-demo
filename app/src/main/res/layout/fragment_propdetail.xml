<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:columnCount="2" android:layout_margin="12dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              style="@style/FieldLabel" android:layout_margin="8dp" android:gravity="right"
              android:layout_gravity="top"
              android:text="title" />
    <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="8dp"
              android:layout_gravity="fill_horizontal" android:background="@drawable/bg_field"
              android:id="@+id/propdetail_name" />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              style="@style/FieldLabel" android:layout_margin="8dp" android:gravity="right"
              android:layout_gravity="top"
              android:text="address" />
    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_gravity="fill_horizontal"
                  android:orientation="vertical" >
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp"
                  android:layout_gravity="fill_horizontal" android:background="@drawable/bg_field"
                  android:id="@+id/propdetail_address" />
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="FROM GPS" android:id="@+id/propdetail_address_gps_button" />
    </LinearLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              style="@style/FieldLabel" android:layout_margin="8dp" android:gravity="right"
              android:layout_gravity="top"
              android:text="coords" />
    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_gravity="fill_horizontal" android:orientation="vertical" >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal" >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      style="@style/FieldLabel"
                      android:text="lat" />
            <EditText android:layout_width="90dp" android:layout_height="wrap_content" android:layout_margin="8dp"
                      android:id="@+id/propdetail_coordx" android:background="@drawable/bg_field" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      style="@style/FieldLabel"
                      android:text="long" />
            <EditText android:layout_width="90dp" android:layout_height="wrap_content" android:layout_margin="8dp"
                      android:id="@+id/propdetail_coordy" android:background="@drawable/bg_field" />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="horizontal" >
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="FROM GPS" android:id="@+id/propdetail_coords_gps_button" />
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="FROM ADDRESS" android:id="@+id/propdetail_coords_address_button" />
        </LinearLayout>
    </LinearLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              style="@style/FieldLabel" android:layout_margin="8dp" android:gravity="right"
              android:layout_gravity="top"
              android:text="description" />
    <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="8dp"
              android:layout_gravity="fill_horizontal"
              android:minLines="2" android:background="@drawable/bg_field"
              android:id="@+id/propdetail_desc" />


</GridLayout>